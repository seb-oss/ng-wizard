{
  "name": "seb-ng-wizard-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve seb-ng-wizard-demo --port 4201",
    "prebuild": "rimraf dist",
    "build": "ng build seb-ng-wizard",
    "build:demo": "ng build seb-ng-wizard-demo --prod --base-href /ng-wizard/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "semantic-release",
    "package-lock-sanitizer": "package-lock-sanitizer"
  },
  "release": {
    "pkgRoot": "./dist/ng-wizard"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular-devkit/build-ng-packagr": "~0.12.0",
    "@angular/cli": "~7.2.2",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@sebgroup/bootstrap": "^3.1.1",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.1.4",
    "ng-packagr": "^10.1.1",
    "node-sass": "^4.13.0",
    "package-lock-sanitizer": "^1.0.0",
    "prettier": "^1.16.4",
    "protractor": "~5.4.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.3",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run package-lock-sanitizer && git add package-lock.json",
      "commit-msg": "commitlint --edit"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ],
    "*.{ts,scss,html,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
